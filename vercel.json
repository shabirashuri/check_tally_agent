{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "SECRET_KEY": "@secret_key",
    "GROQ_API_KEY": "@groq_api_key",
    "ALGORITHM": "HS256",
    "ACCESS_TOKEN_EXPIRE_MINUTES": "43200",
    "API_TITLE": "Cheque Tally Agent",
    "API_DESCRIPTION": "Reconciles company-issued cheques with bank-cleared cheques",
    "API_VERSION": "1.0.0",
    "ENVIRONMENT": "production",
    "DEBUG": "false"
  }
}
